/* pages/shouye/shouye.wxss */
page {
  background-color: #fff
}

/* 轮播图 */
swiper {
  margin: 10rpx 20rpx;
  height: 350rpx;
  
}

.lunbotu {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

/* 随机答题 */
.top {
  color: white;
  font-size: 50rpx;
  margin: 20rpx;
  width: 700rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  background: -webkit-linear-gradient(left,#ffa9a9,#ff0808);
  border-radius: 15rpx;
}

/* 题目类型 */
.item_root {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 20rpx;
}

.item {
  color: white;
  margin-top: 20rpx;
  width: 344rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  /* background: #389bff; */
  background: -webkit-linear-gradient(left,#a7d3ff,#0080ff);
  border-radius: 15rpx;
}

.item_root :nth-child(2n) {
  margin-left: 20rpx;
  /* background: #42f1e0; */
  background: -webkit-linear-gradient(left,#a9f59a,#12dd00);
  border-radius: 15rpx;
}

.item_root :nth-child(3n) {
  background: #ff9d6f;
  background: -webkit-linear-gradient(left,#ffb089,#ff9d6f);
  border-radius: 15rpx;
}

.item_root :nth-child(4n) {
  /* background: #8A2BE2; */
  background: -webkit-linear-gradient(left,#cd97ff,#890bff);
  border-radius: 15rpx;
}

.item_root :nth-child(5n) {
  /* background: #FF6A6A; */
  background: -webkit-linear-gradient(left,rgb(255, 220, 173),#fc3434);
  border-radius: 15rpx;
}



/* 轮播 */
.home_swiper {
  margin: 20rpx 30rpx 40rpx 30rpx;
  height: 350rpx;
  box-shadow: 0 3px 4px 0 rgba(97, 97, 97, 0.2);
  border-radius: 20rpx;
  overflow: hidden;
}

.slide_image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  
}

.date {
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.title {
  font-weight: 550;
  margin: 30rpx 0rpx 0 30rpx;
}
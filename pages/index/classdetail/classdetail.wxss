.class-img {
  width: 100%;
  height: 400rpx;
}
.class-name {
  margin: 30rpx 20rpx;
  font-size: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.class-name-share{

  padding: 20rpx 0 0 0;
  margin:  0 0;
  background-color: white;
  outline: none;
}
.class-name-share::after {
  border: none;
}

.class-name-image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
}
.class-title {
  margin: 40rpx 20rpx;
  font-size: 36rpx;
  font-weight: bolder;
}
.class-introduce {
  margin: 20rpx 20rpx;
  padding: 20rpx 20rpx;
}
.class-zhang {
  margin: 30rpx 0rpx;
}
.class-jie {
  margin: 30rpx 0rpx 30rpx 20rpx;
}

.line {
  height: 30rpx;
  background-color: #f7f7f7;
}

.line-wrap {
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  margin: 0rpx 20rpx;
  align-items:center;
}

.teacher-info-wrap {
  display: flex;
  flex-direction: row;
  margin: 20rpx 20rpx;
  padding: 20rpx 40rpx;
  background-color: #FEF1E4;
  border-radius: 20rpx;
  color: #8E7C5A;
}
.teacher-img {
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
  border: 2rpx solid #fff;
}

.free-cell {
  
  background: -webkit-linear-gradient(left,#FFAF50,#FC7340,#FD2244);
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #fff;
  padding: 5rpx 10rpx;
  margin-right: 15rpx;
}

.bot-menu {
  /* 底部菜单核心样式 */
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  padding: 10rpx 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #FEF1E4;
}
.buy-cell {
  background: -webkit-linear-gradient(left,#FFAF50,#FC7340,#FD2244);
  border-radius: 50rpx;
  color: #fff;
  padding: 20rpx 40rpx;
  margin-right: 40rpx;
}
.price {
  color: #FD2244;
  font-size: 36rpx;
}

.bofang {
  width: 30rpx;
  height: 30rpx;
}
.line-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}


.one-cell image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.one-cell{
  display: flex;
  flex-direction: column;
  margin: 0 30rpx 20rpx 0rpx;
  text-align: center;
  width: 120rpx;
}
.add-circle-wrap {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 20rpx 30rpx;
}

.circle-title {
  display: -webkit-box;
  overflow: hidden;
  white-space: pre-wrap;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.button-kefu {
  background-color: #fff;
  padding:  0 0;
  margin:  0 0;
  outline: none;
}

.button-kefu::after{
  border: none;
  
}
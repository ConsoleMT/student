/* 轮播 */
.home_swiper {
  margin: 20rpx 40rpx 40rpx 40rpx;
  height: 350rpx;
  box-shadow: 0 3px 4px 0 rgba(97, 97, 97, 0.2);
  border-radius: 20rpx;
  overflow: hidden;
}

.slide_image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  
}



/* 视频列表 */

.video_wrap {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 30rpx;
  justify-content: space-between;
}

.video_item {
  width: 50%;
  margin-bottom: 20rpx;
  background-color: white;
  border-radius: 15rpx 15rpx 0rpx 0rpx;
}

.course-img {
  width: 335rpx;
  height: 200rpx;
}
.course-title {
  margin: 10rpx 0;
  height: 120rpx;
}
.price {
  color: rgb(255, 123, 0);
  margin: 10rpx 15rpx 20rpx 0;
  font-size: 34rpx;

}
.flex-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  
}
.people-num {
  color: #afafaf;
}



/*菜单*/
.main-core {
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  /* border-bottom: 15rpx solid #E5E5E5; */
  padding: 0rpx 0rpx 20rpx 0rpx;
  margin-bottom: 0rpx;

  overflow: hidden;
  background-color: #ffffff;
  margin-top: 0rpx;
}

.main-core-item {
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 25%;
  
}
.core-item-icon {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 15rpx auto;
}
.core-item-name {
  display: block;
  margin: 5rpx;
  font-size: 25rpx;
  color: #616161;
}



.search {
  margin: 20rpx 40rpx 0rpx 40rpx;
  background-color: #F4F4F4;
  color: #616161;
  border-radius: 50rpx;
  padding: 15rpx 20rpx;
  text-align: center;
}
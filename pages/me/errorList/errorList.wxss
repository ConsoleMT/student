/* pages/shouye/shouye.wxss */
page {
  background-color: #fff
}

/* 题目类型 */
.item_root {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 20rpx;
}



.item {
  color: white;
  margin-top: 20rpx;
  width: 300rpx;
  /* height: 200rpx;
  line-height: 200rpx; */
  padding: 40rpx 20rpx;
  text-align: center;
  /* background: #1E90FF; */
  background: -webkit-linear-gradient(left,#8ac3fd,#1E90FF);
  border-radius: 15rpx;
}

.item_root :nth-child(2n) {
  margin-left: 20rpx;
  /* background: #42f1e0; */
  background: -webkit-linear-gradient(left,#a9f59a,#12dd00);
  border-radius: 15rpx;
}

.item_root :nth-child(3n) {
  background: #ff9d6f;
  background: -webkit-linear-gradient(left,#ffb089,#ff9d6f);
  border-radius: 15rpx;
}

.item_root :nth-child(4n) {
  /* background: #8A2BE2; */
  background: -webkit-linear-gradient(left,#cd97ff,#890bff);
  border-radius: 15rpx;
}

.item_root :nth-child(5n) {
  /* background: #FF6A6A; */
  background: -webkit-linear-gradient(left,rgb(255, 220, 173),#fc3434);
  border-radius: 15rpx;
}

/* 没有错题 */
.nothing {
  color: white;
  background: -webkit-linear-gradient(left,rgb(255, 220, 173),#fc3434);
  padding: 20rpx;
  text-align: center;
  margin: 60rpx;
  border-radius: 50rpx;
}


.title {
  font-size: 40rpx;
  margin: 40rpx 20rpx 20rpx 20rpx;
  font-weight: 550;
}
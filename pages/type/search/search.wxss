

/**搜索**/
.search_icon {
  width: 40rpx;
  height: 40rpx;
}
.search_text {
  font-size: 26rpx;
  background-color: white;
  height: 60rpx;
  width: 650rpx;
}
.search_wrap {
  background-color: #F7F7F7;
  padding: 15rpx 0rpx 15rpx 0rpx;
}
.search_block {
  background-color: white;
  display: flex;
  flex-direction: row;
  padding: 10rpx 10rpx 10rpx 10rpx;
  /* border-radius: 20rpx; */
  margin: 0rpx 12rpx;
}
.search_icon_wapper {
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0rpx 10rpx;
}




.records {
  text-align: center;
  background-color: #F7F7F7;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}


/* 在线课程 */
.online-wrap {
  margin: 0rpx 40rpx 20rpx 40rpx;
  display: flex;
  flex-direction: row;
  padding-bottom: 20rpx;
  border-bottom: solid 1rpx #f7f7f7;
}
.online-img {
  width: 240rpx;
  height: 190rpx;
  border-radius: 20rpx;
}
.online-title {
  font-size: 34rpx;
  margin: 0rpx 0rpx 0rpx 20rpx;
  font-weight: bold;
}
.online-tag {
  color: #515151;
  margin-left: 20rpx;
  margin-top: 15rpx;
  font-size: 26rpx;
}
.sub-title {
  color: #999999;
  font-weight: normal;
  font-size: 30rpx;
  margin-left: 10rpx;
}
.price {
  font-size: 36rpx;
  color: red;

  

}
.subtitle {
  display: -webkit-box;
  overflow: hidden;
  white-space: pre-wrap;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 视频列表 */

.video_wrap {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 30rpx;
  justify-content: space-between;
}

.video_item {
  width: 50%;
  margin-bottom: 20rpx;
  background-color: white;
  border-radius: 15rpx 15rpx 0rpx 0rpx;
}

.course-img {
  width: 335rpx;
  height: 200rpx;
}
.course-title {
  margin: 10rpx 0;
  height: 120rpx;
}
.price {
  color: rgb(255, 123, 0);
  margin: 20rpx 0;
  font-size: 34rpx;
}



.tishi-info {
  margin: 80rpx 20rpx;
  text-align: center;
}